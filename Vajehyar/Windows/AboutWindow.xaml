<Window
    x:Class="Vajehyar.Windows.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Vajehyar"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:Vajehyar.Properties"
    Title="About"
    Width="494.445"
    Height="507.412"
    FontFamily="{StaticResource IranSans}"
    Left="{Binding Source={x:Static properties:Settings.Default}, Path=AboutLeftPos, Mode=TwoWay}"
    MouseDown="Window_MouseDown"
    Style="{StaticResource WindowStyle}"
    Top="{Binding Source={x:Static properties:Settings.Default}, Path=AboutTopPos, Mode=TwoWay}"
    Topmost="true"
    mc:Ignorable="d">

    <Border Style="{StaticResource BorderStyle}">

        <StackPanel>

            <Button
                Width="25"
                Height="25"
                Margin="3"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Click="Button_Click"
                Content="x"
                Style="{StaticResource ButtonStyle1}" />

            <StackPanel Height="499">

                <StackPanel
                    Margin="0,15,23,0"
                    HorizontalAlignment="Right"
                    FlowDirection="RightToLeft"
                    Orientation="Horizontal">

                    <Image
                        Width="48"
                        Height="48"
                        Margin="3"
                        Source="/Vajehyar;component/Resources/Icons/Vajehyar.png" />

                    <StackPanel Margin="5,0,0,0">

                        <TextBlock
                            VerticalAlignment="Top"
                            FontFamily="{StaticResource IranSans}"
                            FontSize="16"
                            FontWeight="Bold"
                            Text="واژه یار" />

                        <TextBlock
                            Margin="0,2,0,0"
                            FontFamily="{StaticResource IranSans}"
                            FontSize="13"
                            Text="راهنمای واژه‌گزینی برای اهالی قلم" />

                    </StackPanel>

                </StackPanel>



                <TextBlock
                    Width="408"
                    Height="322"
                    Margin="24,10,32,0"
                    HorizontalAlignment="Center"
                    FlowDirection="RightToLeft"
                    LineHeight="19"
                    TextWrapping="Wrap"><Run
                        FontSize="14"
                        FontWeight="Bold"
                        Text="واژه‌یار " /><Run Text="کتابخانه‌ای از واژگان فارسی است که نویسندگان و مترجمان را در یافتن معادل مناسب کلمات یاری می‌دهد. " /><LineBreak /><Run /><LineBreak /><Run Text="دادگان این برنامه مبتنی بر دو فرهنگ غنیِ فارسی است: اولی فرهنگ جامع واژگان مترادف و متضاد فارسی اثر فرج‌الله خداپرستی با بیش از 135000 واژه و دیگری فرهنگ طیفی زبان فارسی تألیف جمشید فراروی با بیش از 45000 لغت و عبارت مرکب که در طیف موضوعی وسیعی به معرفی لغات فارسی پرداخته است." /><LineBreak /><Run /><LineBreak /><Run FontWeight="Bold" Text="این برنامه " /><Run FontWeight="Bold" Text="دو مزیت عمده دارد: " /><LineBreak /><Run Text="نخست جستجوی در لحظه که همزمان با نوشتن هرآنچه بیابد نشان می‌دهد و دیگری جستجوی تمام متن که به خاطر محدود نبودن به مدخل‌ها، تعداد کلمات بیشتری خواهد یافت. امید که این برنامه، اهالی قلم را فایده " /><Run Text="رساند " /><Run Text="و در صیانت و احیای زبان فارسی قدمی کوچک بردارد." /><LineBreak /><Run /><LineBreak /><Run FontWeight="Bold" Text="طراحی و توسعه: سید ایوب کوکبی" /><LineBreak /><Run FontWeight="Bold" Text="ایمیل: " />
                    <TextBlock FlowDirection="LeftToRight"><Hyperlink
                            NavigateUri="mailto:kokabi1365@gmail.com?subject=واژه‌یار"
                            RequestNavigate="Hyperlink_OnRequestNavigate"
                            TextDecorations="">
                            kokabi1365@gmail.com
                        </Hyperlink></TextBlock>
                </TextBlock>



                <StackPanel
                    HorizontalAlignment="Center"
                    FlowDirection="RightToLeft"
                    Orientation="Horizontal">
                    <Button
                        Width="52"
                        Height="20"
                        HorizontalAlignment="Right"
                        Background="#FFF0F0F0"
                        Content="نسخۀ"
                        FontSize="10"
                        FontWeight="Bold"
                        IsEnabled="False"
                        Style="{StaticResource RightRoundedButtonStyle}" />

                    <Button
                        Width="52"
                        Height="20"
                        Background="#FFBFDBF0"
                        Content="1.0"
                        Cursor="Hand"
                        FontSize="10"
                        FontWeight="Bold"
                        Style="{StaticResource LeftRoundedButtonStyle}"
                        ToolTip="بررسی بروزرسانی" />
                </StackPanel>

            </StackPanel>
        </StackPanel>

    </Border>

</Window>
